<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.base.system.mapper.LoginLogMapper">

    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.base.system.entity.LoginLog">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="ip" property="loginIp" />
        <result column="location" property="loginLocation" />
        <result column="browser" property="browser" />
        <result column="os" property="os" />
        <result column="status" property="status" />
        <result column="message" property="message" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, username, ip, location, browser, os, status, message, create_time
    </sql>

    <!-- 条件查询 -->
    <sql id="Query_Condition">
        <where>
            <if test="username != null and username != ''">
                AND username LIKE CONCAT('%', #{username}, '%')
            </if>
            <if test="loginIp != null and loginIp != ''">
                AND ip LIKE CONCAT('%', #{loginIp}, '%')
            </if>
            <if test="status != null">
                AND status = #{status}
            </if>
            <if test="startTime != null and startTime != ''">
                AND create_time &gt;= #{startTime}
            </if>
            <if test="endTime != null and endTime != ''">
                AND create_time &lt;= #{endTime}
            </if>
        </where>
    </sql>

</mapper>
